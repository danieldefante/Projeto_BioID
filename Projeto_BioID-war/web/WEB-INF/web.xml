<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>JSON RESTful Services</display-name>
    <servlet>
        <servlet-name>JSON RESTful Service</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>com.javapapers.webservices.rest.jersey</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>JSON RESTful Service</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/erro.html</location>
    </error-page>
    <security-constraint>
        <display-name>pag_administrador</display-name>
        <web-resource-collection>
            <web-resource-name>paginas administrativas</web-resource-name>
            <description/>
            <url-pattern>/administrador/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>administrador-role</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>pag_agricultor</display-name>
        <web-resource-collection>
            <web-resource-name>paginas para agricultores</web-resource-name>
            <description/>
            <url-pattern>/agricultor/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>agricultor-role</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>page_gerenciador</display-name>
        <web-resource-collection>
            <web-resource-name>paginas para gerenciadores</web-resource-name>
            <description/>
            <url-pattern>/gerenciador/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>gerenciador-role</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>page_entrevistador</display-name>
        <web-resource-collection>
            <web-resource-name>paginas para entrevistador</web-resource-name>
            <description/>
            <url-pattern>/entrevistador/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>entrevistador-role</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>bioid_realm</realm-name>
        <form-login-config>
            <form-login-page>/index.html</form-login-page>
            <form-error-page>/erro.html</form-error-page>
        </form-login-config>
    </login-config>
</web-app>
