<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>paginas/home.html</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>403</error-code>
        <location>/seguranca/erro.html</location>
    </error-page>
    <security-constraint>
        <display-name>pagina administrador</display-name>
        <web-resource-collection>
            <web-resource-name>paginas administrador</web-resource-name>
            <description/>
            <!--<url-pattern>/servicos/*</url-pattern>-->
            <url-pattern>/paginas/administrador.html</url-pattern>
            <url-pattern>/paginas/home.html</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>administrador-role</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>pagina gerenciador</display-name>
        <web-resource-collection>
            <web-resource-name>paginas para gerenciador</web-resource-name>
            <description/>
            <url-pattern>/paginas/gerenciador.html</url-pattern>
            <url-pattern>/paginas/home.html</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>gerenciador-role</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>pagina agricultor</display-name>
        <web-resource-collection>
            <web-resource-name>paginas para agricultores</web-resource-name>
            <description/>
            <url-pattern>/paginas/agricultor.html</url-pattern>
            <url-pattern>/paginas/home.html</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>agricultor-role</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>pagina entrevistador</display-name>
        <web-resource-collection>
            <web-resource-name>pagina entrevistador</web-resource-name>
            <description/>
            <url-pattern>/paginas/entrevistador.html</url-pattern>
            <url-pattern>/paginas/home.html</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>entrevistador-role</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>bioid-realm</realm-name>
        <form-login-config>
            <form-login-page>/login.html</form-login-page>
            <form-error-page>/login.html</form-error-page>
        </form-login-config>
    </login-config>
</web-app>
